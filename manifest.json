{
    "manifest_version": 2,
 
    "name": "Image Navigator",
    "description": "Searching all images in active tab and send selected image on the server",
    "version": "0.1",
    
    "browser_action": {
        "default_icon": "img/icon128.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab"
    ],

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Z",
                "windows": "Alt+Z",
                "mac": "Alt+Z",
                "linux": "Alt+Z",
                "chromeos": "Alt+Z"
            }
        }
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": false
    }]
}
