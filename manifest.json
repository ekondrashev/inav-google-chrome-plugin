{
    "manifest_version": 2,
 
    "name": "__MSG_EXT_NAME__",
    "description": "__MSG_EXT_DESCRIPTION__",
    "version": "0.0.1",
"default_locale": "en",
    
    "browser_action": {
        "default_icon": "img/icon128.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab",
        "management",
        "identity"
    ],

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Z",
                "windows": "Alt+Z",
                "mac": "Alt+Z",
                "linux": "Alt+Z",
                "chromeos": "Alt+Z"
            }
        }
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": false
    }]
}
